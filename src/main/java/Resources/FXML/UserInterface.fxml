<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #F7EFFF, #EDE7FF);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.UserController">

   <!-- Attach CSS (same file as earlier) -->
   <stylesheets>
      <URL value="@/CSS/alleviation.css"/>
   </stylesheets>

   <children>

      <!-- ===== HEADER ===== -->
      <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="86.0" prefWidth="600.0"
                  style="-fx-background-color: #D9D3FF;
                           -fx-border-color: rgba(0,0,0,0.08);
                           -fx-border-width: 0 0 1 0;">
         <children>

            <HBox layoutX="14.0" layoutY="10.0" spacing="12.0"
                  prefWidth="572.0" prefHeight="66.0"
                  alignment="CENTER_LEFT">

               <children>
                  <ImageView fitHeight="62.0" fitWidth="62.0" preserveRatio="true">
                     <image>
                        <Image url="@../Pictures/MainPhoto.png"/>
                     </image>
                  </ImageView>

                  <VBox spacing="2.0">
                     <children>
                        <Label text="Alleviation"
                               style="-fx-text-fill: #2D2353; -fx-font-weight: 900;">
                           <font>
                              <Font size="20.0"/>
                           </font>
                        </Label>

                        <Label text="Shop Dashboard"
                               style="-fx-text-fill: #4A3A7A; -fx-font-weight: 700;">
                           <font>
                              <Font size="13.0"/>
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <Region HBox.hgrow="ALWAYS"/>

                  <!-- User Info (right side) -->
                  <VBox alignment="CENTER_RIGHT" spacing="2.0">
                     <children>
                        <Label fx:id="FullNameLabel"
                               text="Full Name"
                               style="-fx-text-fill: #2D2353; -fx-font-weight: 800;">
                           <font>
                              <Font size="14.0"/>
                           </font>
                        </Label>

                        <Label fx:id="EmailLabel"
                               text="Email"
                               style="-fx-text-fill: #4A3A7A; -fx-font-weight: 600;">
                           <font>
                              <Font size="12.0"/>
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>

         </children>
      </AnchorPane>

      <!-- ===== MAIN CARDS ===== -->
      <HBox layoutX="55.0" layoutY="120.0" spacing="40.0" alignment="TOP_CENTER"
            prefWidth="490.0" prefHeight="220.0">

         <!-- Games Card -->
         <VBox alignment="TOP_CENTER" spacing="10.0"
               prefWidth="220.0" prefHeight="220.0"
               style="-fx-background-color: rgba(255,255,255,0.78);
                         -fx-background-radius: 18;
                         -fx-padding: 16;
                         -fx-border-color: rgba(0,0,0,0.06);
                         -fx-border-radius: 18;">
            <effect>
               <DropShadow radius="12" offsetY="4" color="rgba(0,0,0,0.12)"/>
            </effect>

            <children>
               <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true" smooth="true">
                  <image>
                     <Image url="@../Pictures/Controller1.png"/>
                  </image>
               </ImageView>

               <Label text="Games"
                      style="-fx-text-fill: #3A2B63; -fx-font-weight: 900;">
                  <font>
                     <Font size="18.0"/>
                  </font>
               </Label>

               <Label text="Browse and purchase games"
                      style="-fx-text-fill: #6B5A94; -fx-font-weight: 600;">
                  <font>
                     <Font size="12.0"/>
                  </font>
               </Label>

               <Button fx:id="Gamebutton"
                       text="Go to Games"
                       mnemonicParsing="false"
                       onAction="#GotoGames"
                       prefWidth="170.0"
                       prefHeight="38.0"
                       styleClass="primary-btn"/>
            </children>
         </VBox>

         <!-- Gift Cards Card -->
         <VBox alignment="TOP_CENTER" spacing="10.0"
               prefWidth="220.0" prefHeight="220.0"
               style="-fx-background-color: rgba(255,255,255,0.78);
                         -fx-background-radius: 18;
                         -fx-padding: 16;
                         -fx-border-color: rgba(0,0,0,0.06);
                         -fx-border-radius: 18;">
            <effect>
               <DropShadow radius="12" offsetY="4" color="rgba(0,0,0,0.12)"/>
            </effect>

            <children>
               <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true" smooth="true">
                  <image>
                     <Image url="@../Pictures/GiftCard.png"/>
                  </image>
               </ImageView>

               <Label text="Gift Cards"
                      style="-fx-text-fill: #3A2B63; -fx-font-weight: 900;">
                  <font>
                     <Font size="18.0"/>
                  </font>
               </Label>

               <Label text="Pick a gift card to buy"
                      style="-fx-text-fill: #6B5A94; -fx-font-weight: 600;">
                  <font>
                     <Font size="12.0"/>
                  </font>
               </Label>

               <Button fx:id="GiftCardButton"
                       text="Go to Gift Cards"
                       mnemonicParsing="false"
                       onAction="#GotoGiftCards"
                       prefWidth="170.0"
                       prefHeight="38.0"
                       styleClass="primary-btn"/>
            </children>
         </VBox>

      </HBox>

      <!-- ===== LOGOUT (bottom-left) ===== -->
      <Button layoutX="18.0" layoutY="360.0"
              text="Logout"
              mnemonicParsing="false"
              onAction="#Loggingout"
              prefHeight="30.0"
              prefWidth="90.0"
              styleClass="mini-btn"/>

   </children>
</AnchorPane>
