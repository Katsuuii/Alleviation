<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="219.0" prefWidth="355.0"
            style="-fx-background-color: linear-gradient(to bottom, #F7EFFF, #EDE7FF);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.CEOController">

   <stylesheets>
      <URL value="@/CSS/alleviation.css"/>
   </stylesheets>

   <children>

      <!-- ===== HEADER ===== -->
      <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="64.0" prefWidth="355.0"
                  style="-fx-background-color: #D9D3FF;
                           -fx-border-color: rgba(0,0,0,0.08);
                           -fx-border-width: 0 0 1 0;">
         <children>
            <HBox layoutX="12.0" layoutY="8.0" spacing="10.0"
                  prefWidth="331.0" prefHeight="48.0"
                  alignment="CENTER_LEFT">

               <children>
                  <ImageView fitHeight="48.0" fitWidth="48.0" preserveRatio="true">
                     <image>
                        <Image url="@../../../../src/main/Resources/Pictures/MainPhoto.png"/>
                     </image>
                  </ImageView>

                  <Label text="CEO Login"
                         style="-fx-text-fill: #2D2353; -fx-font-weight: 900;">
                     <font>
                        <Font size="20.0"/>
                     </font>
                  </Label>

                  <Region HBox.hgrow="ALWAYS"/>

                  <Button fx:id="CEOButton"
                          text="Back"
                          mnemonicParsing="false"
                          onAction="#backtoMenu"
                          prefHeight="28.0"
                          prefWidth="70.0"
                          styleClass="mini-btn"/>
               </children>
            </HBox>
         </children>
      </AnchorPane>

      <!-- ===== FORM CARD ===== -->
      <VBox layoutX="20.0" layoutY="78.0"
            prefWidth="315.0"
            spacing="8.0"
            alignment="TOP_CENTER"
            style="-fx-background-color: rgba(255,255,255,0.78);
                     -fx-background-radius: 18;
                     -fx-padding: 14;
                     -fx-border-color: rgba(0,0,0,0.06);
                     -fx-border-radius: 18;">
         <effect>
            <DropShadow radius="12" offsetY="4" color="rgba(0,0,0,0.12)"/>
         </effect>

         <children>

            <!-- First Name -->
            <HBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="287.0">
               <children>
                  <Label fx:id="CEOFirstLabel" text="First Name"
                         prefWidth="90.0"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;"/>
                  <TextField fx:id="CEOFirstField"
                             promptText="First Name..."
                             prefWidth="185.0"
                             prefHeight="28.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;"/>
               </children>
            </HBox>

            <!-- Last Name -->
            <HBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="287.0">
               <children>
                  <Label fx:id="CEOLastLabel" text="Last Name"
                         prefWidth="90.0"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;"/>
                  <TextField fx:id="CEOLastField"
                             promptText="Last Name..."
                             prefWidth="185.0"
                             prefHeight="28.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;"/>
               </children>
            </HBox>

            <!-- Password -->
            <HBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="287.0">
               <children>
                  <Label fx:id="CEOPassLabel" text="CEO Password"
                         prefWidth="90.0"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;"/>
                  <PasswordField fx:id="CEOPasswordField"
                                 promptText="Password..."
                                 prefWidth="185.0"
                                 prefHeight="28.0"
                                 style="-fx-background-radius: 12;
                                              -fx-border-radius: 12;
                                              -fx-border-color: rgba(58,43,99,0.20);
                                              -fx-background-color: white;"/>
               </children>
            </HBox>

            <!-- Message -->
            <Label fx:id="CEOTextField"
                   prefWidth="287.0"
                   wrapText="true"
                   style="-fx-text-fill: #D6002B; -fx-font-weight: 600;"/>

            <!-- Confirm -->
            <Button fx:id="HandleLoginCEO"
                    text="Confirm"
                    mnemonicParsing="false"
                    onAction="#HandleLoginCEO"
                    prefWidth="160.0"
                    prefHeight="34.0"
                    styleClass="primary-btn"/>
         </children>
      </VBox>

   </children>
</AnchorPane>
