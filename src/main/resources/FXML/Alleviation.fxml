<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="364.0"
            style="-fx-background-color: linear-gradient(to bottom, #F7EFFF, #EDE7FF);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.AlleviationController">

    <!-- Attach CSS -->
    <stylesheets>
        <URL value="@/CSS/alleviation.css"/>
    </stylesheets>

    <children>

        <!-- ===== HEADER ===== -->
        <AnchorPane prefHeight="90.0" prefWidth="364.0"
                    style="-fx-background-color: #D9D3FF;
                           -fx-border-color: rgba(0,0,0,0.08);
                           -fx-border-width: 0 0 1 0;">
            <children>

                <HBox layoutX="14.0" layoutY="10.0" spacing="12.0"
                      prefWidth="340.0" prefHeight="70.0"
                      alignment="CENTER_LEFT">

                    <children>
                        <ImageView fx:id="Photo12"
                                   fitHeight="70.0"
                                   fitWidth="70.0"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../../../../src/main/Resources/Pictures/MainPhoto.png"/>
                            </image>
                        </ImageView>

                        <VBox spacing="2.0">
                            <children>
                                <Label text="Welcome to!"
                                       style="-fx-text-fill: #2D2353; -fx-font-weight: 700;">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>

                                <Label text="Alleviation"
                                       style="-fx-text-fill: #2D2353; -fx-font-weight: 800;">
                                    <font>
                                        <Font size="22.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- ===== MAIN CONTENT ===== -->
        <VBox layoutX="32.0" layoutY="115.0"
              prefWidth="300.0"
              spacing="14.0"
              alignment="TOP_CENTER">

            <children>

                <Label text="Would you like to?"
                       style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>

                <!-- Register -->
                <Button fx:id="MainMenReg"
                        text="Register"
                        onAction="#MainMenuReg"
                        prefWidth="220.0"
                        prefHeight="40.0"
                        styleClass="primary-btn">
                    <effect>
                        <DropShadow radius="10"
                                    offsetY="3"
                                    color="rgba(0,0,0,0.18)"/>
                    </effect>
                </Button>

                <Label text="OR"
                       style="-fx-text-fill: #6B5A94; -fx-font-weight: 700;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <!-- Login -->
                <Button fx:id="MainMenLog"
                        text="Login"
                        onAction="#MainMenuLog"
                        prefWidth="220.0"
                        prefHeight="40.0"
                        styleClass="secondary-btn">
                    <effect>
                        <DropShadow radius="10"
                                    offsetY="3"
                                    color="rgba(0,0,0,0.10)"/>
                    </effect>
                </Button>

                <Label text="OR"
                       style="-fx-text-fill: #6B5A94; -fx-font-weight: 700;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <!-- Close -->
                <Button fx:id="CloseButton"
                        text="Close"
                        onAction="#onCloseButtononAction"
                        prefWidth="220.0"
                        prefHeight="40.0"
                        styleClass="danger-btn">
                    <effect>
                        <DropShadow radius="10"
                                    offsetY="3"
                                    color="rgba(0,0,0,0.18)"/>
                    </effect>
                </Button>

                <!-- To CEO -->
                <Button fx:id="CEOButton"
                        text="ToCEO"
                        onAction="#ToCEO"
                        prefWidth="110.0"
                        prefHeight="30.0"
                        styleClass="mini-btn"/>

            </children>
        </VBox>

    </children>
</AnchorPane>
