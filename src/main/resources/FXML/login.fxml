<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefHeight="473.0" prefWidth="345.0"
            style="-fx-background-color: linear-gradient(to bottom, #F7EFFF, #EDE7FF);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController">

   <!-- Attach CSS -->
   <stylesheets>
      <URL value="@/CSS/alleviation.css"/>
   </stylesheets>

   <children>

      <!-- ===== HEADER ===== -->
      <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="90.0" prefWidth="345.0"
                  style="-fx-background-color: #D9D3FF;
                           -fx-border-color: rgba(0,0,0,0.08);
                           -fx-border-width: 0 0 1 0;">
         <children>
            <HBox layoutX="14.0" layoutY="10.0" spacing="12.0"
                  prefWidth="317.0" prefHeight="70.0"
                  alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="70.0" fitWidth="70.0" preserveRatio="true">
                     <image>
                        <Image url="@../../../../src/main/Resources/Pictures/MainPhoto.png"/>
                     </image>
                  </ImageView>

                  <VBox spacing="2.0">
                     <children>
                        <Label text="Welcome back"
                               style="-fx-text-fill: #2D2353; -fx-font-weight: 700;">
                           <font>
                              <Font size="16.0"/>
                           </font>
                        </Label>

                        <Label text="Login"
                               style="-fx-text-fill: #2D2353; -fx-font-weight: 800;">
                           <font>
                              <Font size="22.0"/>
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <Region HBox.hgrow="ALWAYS"/>
               </children>
            </HBox>
         </children>
      </AnchorPane>

      <!-- ===== FORM CARD ===== -->
      <VBox layoutX="30.0" layoutY="120.0"
            prefWidth="285.0"
            spacing="10.0"
            alignment="TOP_CENTER"
            style="-fx-background-color: rgba(255,255,255,0.75);
                     -fx-background-radius: 18;
                     -fx-padding: 18;
                     -fx-border-color: rgba(0,0,0,0.06);
                     -fx-border-radius: 18;">
         <effect>
            <DropShadow radius="12" offsetY="4" color="rgba(0,0,0,0.12)"/>
         </effect>

         <children>

            <Label fx:id="LoginUser" text="Username"
                   style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;">
               <font>
                  <Font size="14.0"/>
               </font>
            </Label>

            <TextField fx:id="Userlogfield"
                       promptText="Username..."
                       prefWidth="240.0"
                       prefHeight="36.0"
                       style="-fx-background-radius: 12;
                                  -fx-border-radius: 12;
                                  -fx-border-color: rgba(58,43,99,0.20);
                                  -fx-background-color: white;"/>

            <Label fx:id="LoginPass" text="Password"
                   style="-fx-text-fill: #3A2B63; -fx-font-weight: 700;">
               <font>
                  <Font size="14.0"/>
               </font>
            </Label>

            <PasswordField fx:id="UserPassField"
                           promptText="Password..."
                           prefWidth="240.0"
                           prefHeight="36.0"
                           style="-fx-background-radius: 12;
                                      -fx-border-radius: 12;
                                      -fx-border-color: rgba(58,43,99,0.20);
                                      -fx-background-color: white;"/>

            <!-- Error Label -->
            <Label fx:id="LogErrorLabel"
                   prefWidth="240.0"
                   wrapText="true"
                   textFill="#D6002B"
                   style="-fx-font-weight: 600;">
               <font>
                  <Font size="12.0"/>
               </font>
            </Label>

            <!-- Buttons -->
            <Button fx:id="LoginButton"
                    text="Login"
                    mnemonicParsing="false"
                    onAction="#handleLogButton"
                    prefWidth="240.0"
                    prefHeight="40.0"
                    styleClass="primary-btn">
               <effect>
                  <DropShadow radius="10" offsetY="3" color="rgba(0,0,0,0.18)"/>
               </effect>
            </Button>

            <Button fx:id="LoginButton1"
                    text="Go to Menu"
                    mnemonicParsing="false"
                    onAction="#GotoMainMenu"
                    prefWidth="240.0"
                    prefHeight="38.0"
                    styleClass="secondary-btn">
               <effect>
                  <DropShadow radius="10" offsetY="3" color="rgba(0,0,0,0.10)"/>
               </effect>
            </Button>

         </children>
      </VBox>

      <!-- ===== BOTTOM CTA ===== -->
      <Button fx:id="CloseButton"
              layoutX="30.0" layoutY="430.0"
              text="Wanna Register a new account?"
              mnemonicParsing="false"
              onAction="#GotoRegister"
              prefWidth="285.0"
              prefHeight="30.0"
              styleClass="mini-btn"/>

   </children>
</AnchorPane>
