<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="645.0" prefWidth="520.0"
            style="-fx-background-color: linear-gradient(to bottom, #F7EFFF, #EDE7FF);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.RegisterController">

   <!-- Attach CSS -->
   <stylesheets>
      <URL value="@/CSS/alleviation.css"/>
   </stylesheets>

   <children>

      <!-- ===== HEADER ===== -->
      <AnchorPane prefHeight="82.0" prefWidth="520.0"
                  style="-fx-background-color: #D9D3FF;
                           -fx-border-color: rgba(0,0,0,0.08);
                           -fx-border-width: 0 0 1 0;"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
         <children>
            <HBox layoutX="14.0" layoutY="12.0" spacing="12.0"
                  prefWidth="492.0" prefHeight="58.0"
                  alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="58.0" fitWidth="58.0" preserveRatio="true">
                     <image>
                        <Image url="@../Pictures/MainPhoto.png"/>
                     </image>
                  </ImageView>

                  <VBox spacing="2.0">
                     <children>
                        <Label text="Create Account"
                               style="-fx-text-fill: #2D2353; -fx-font-weight: 900;">
                           <font>
                              <Font size="20.0"/>
                           </font>
                        </Label>
                        <Label text="Registration"
                               style="-fx-text-fill: #4A3A7A; -fx-font-weight: 700;">
                           <font>
                              <Font size="12.0"/>
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <Region HBox.hgrow="ALWAYS"/>
               </children>
            </HBox>
         </children>
      </AnchorPane>

      <!-- ===== FORM CARD ===== -->
      <VBox layoutX="55.0" layoutY="110.0"
            prefWidth="410.0"
            spacing="12.0"
            alignment="TOP_CENTER"
            style="-fx-background-color: rgba(255,255,255,0.78);
                     -fx-background-radius: 18;
                     -fx-padding: 18;
                     -fx-border-color: rgba(0,0,0,0.06);
                     -fx-border-radius: 18;">
         <effect>
            <DropShadow radius="12" offsetY="4" color="rgba(0,0,0,0.12)"/>
         </effect>

         <children>

            <!-- First Name -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="FirstnameReg" text="First Name"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <TextField fx:id="RegFirstnametextField"
                             promptText="First Name"
                             onAction="#handleRegisterButton"
                             prefHeight="34.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;
                                          -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Last Name -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="LastNameReg" text="Last Name"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <TextField fx:id="RegLastnameTextField"
                             promptText="Last Name"
                             onAction="#handleRegisterButton"
                             prefHeight="34.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;
                                          -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Email -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="EmailReg" text="Email"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <TextField fx:id="RegEmailTextField"
                             promptText="Email"
                             onAction="#handleRegisterButton"
                             prefHeight="34.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;
                                          -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Username -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="UsernameReg" text="Username"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <TextField fx:id="RegUsernameTextField"
                             promptText="Username"
                             onAction="#handleRegisterButton"
                             prefHeight="34.0"
                             style="-fx-background-radius: 12;
                                          -fx-border-radius: 12;
                                          -fx-border-color: rgba(58,43,99,0.20);
                                          -fx-background-color: white;
                                          -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Password -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="PasswordReg" text="Password"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <PasswordField fx:id="RegPasswordField"
                                 promptText="Password"
                                 onAction="#handleRegisterButton"
                                 prefHeight="34.0"
                                 style="-fx-background-radius: 12;
                                              -fx-border-radius: 12;
                                              -fx-border-color: rgba(58,43,99,0.20);
                                              -fx-background-color: white;
                                              -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Confirm Password -->
            <VBox spacing="6" alignment="TOP_LEFT" prefWidth="370.0">
               <children>
                  <Label fx:id="ConfirmPassReg" text="Confirm Password"
                         style="-fx-text-fill: #3A2B63; -fx-font-weight: 800;"/>
                  <PasswordField fx:id="RegConfirmPasswordField"
                                 promptText="Confirm Password"
                                 onAction="#handleRegisterButton"
                                 prefHeight="34.0"
                                 style="-fx-background-radius: 12;
                                              -fx-border-radius: 12;
                                              -fx-border-color: rgba(58,43,99,0.20);
                                              -fx-background-color: white;
                                              -fx-padding: 0 10 0 10;"/>
               </children>
            </VBox>

            <!-- Error label -->
            <Label fx:id="RegErrorLabel"
                   prefWidth="370.0"
                   wrapText="true"
                   style="-fx-text-fill: #D6002B; -fx-font-weight: 700;"/>

            <!-- Buttons row -->
            <HBox spacing="12" alignment="CENTER" prefWidth="370.0">
               <children>
                  <Button fx:id="RegisterButton"
                          text="Register"
                          mnemonicParsing="false"
                          onAction="#handleRegisterButton"
                          prefWidth="170.0"
                          prefHeight="38.0"
                          styleClass="primary-btn"/>

                  <Button fx:id="MainMenuButton"
                          text="Main Menu"
                          mnemonicParsing="false"
                          onAction="#GotoMainMenu"
                          prefWidth="170.0"
                          prefHeight="38.0"
                          styleClass="secondary-btn"/>
               </children>
            </HBox>

         </children>
      </VBox>

   </children>
</AnchorPane>
